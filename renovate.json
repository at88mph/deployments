{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prConcurrentLimit": 20,
  "prHourlyLimit": 20,
  "repositories": ["shinybrar/deployments"],
  "platform": "github",
  "semanticCommits": "enabled",
  "commitMessagePrefix": "renovate/chore(deps): ",
  "includePaths": [
    "helm/*/**/Chart.yaml",
    "helm/*/**/values.yaml",
    "pyproject.toml",
    ".github/workflows/**.yml"
  ],
  "packageRules": [
    {
      "matchDatasources": ["helm"],
      "commitMessagePrefix": "helm-renovate/chore(deps): ",
      "postUpgradeTasks": {
        "commands": ["uv run pre-commit run -a"],
        "executionMode": "update"
      }
    },
    {
      "matchManagers": ["uv"],
      "commitMessagePrefix": "py-renovate/chore(deps): ",
      "groupName": "python",
      "rangeStrategy": "replace"
    },
    {
      "matchManagers": ["github-actions"],
      "commitMessagePrefix": "gha-renovate/chore(deps): ",
      "groupName": "github-actions"
    },
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "prBodyColumns": [
        "Package",
        "Update",
        "Type",
        "New value",
        "Package file",
        "References"
      ]
    },
    {
        "allowedCommands": ["uv run pre-commit run -a"]
    }
  ]
}
